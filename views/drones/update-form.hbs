<h2>Update the drone</h2>
<form method="post" action="/drones/{{drone._id}}/edit" class="form">
    <label for="name">name</label>
    <input class="input" type="text" id="name" name="name" value="{{drone.name}}">
    <label for="propellers">Propellers</label>
    <input id="propellers" class="input" type="text" name="propellers" value="{{drone.propellers}}">
    <label for="maxSpeed">Max Speed</label>
    <input class="input" name="maxSpeed" id="maxSpeed" value="{{drone.maxSpeed}}">
    <button class="btn">Submit</button>
</form>